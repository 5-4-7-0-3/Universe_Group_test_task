# Environment Configuration Example
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Service Ports
GATEWAY_PORT=3001
FB_COLLECTOR_PORT=3002
TTK_COLLECTOR_PORT=3003
REPORTER_PORT=3004

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eventdb

# NATS
NATS_URL=nats://localhost:4222

# Logging
LOG_LEVEL=info

# Publisher Configuration (for local testing)
EVENT_ENDPOINT=http://localhost:3001/events
# Batch size for publisher (if supported)
PUBLISHER_BATCH_SIZE=1000

# Gateway Configuration
# Maximum request body size (default: 50mb)
BODY_SIZE_LIMIT=50mb

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Optional: Production-specific
# DATABASE_SSL=true
# NATS_USER=nats_user
# NATS_PASSWORD=nats_password
# SENTRY_DSN=your_sentry_dsn_here